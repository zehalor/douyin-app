generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  avatar    String?
  createdAt DateTime @default(now())

  videos   Video[]
  comments Comment[]
  likes    Like[]
}

model Video {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  videoUrl    String
  coverUrl    String?
  ratio       String   @default("3/4")
  createdAt   DateTime @default(now())

  views       Int      @default(0)
  category    String?

  authorId Int
  author   User @relation(fields: [authorId], references: [id])

  comments Comment[]
  likes    Like[]
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())

  userId Int
  user   User @relation(fields: [userId], references: [id])

  videoId Int
  video   Video @relation(fields: [videoId], references: [id])
}

model Like {
  id Int @id @default(autoincrement())

  userId Int
  user   User @relation(fields: [userId], references: [id])

  videoId Int
  video   Video @relation(fields: [videoId], references: [id])

  @@unique([userId, videoId])
}